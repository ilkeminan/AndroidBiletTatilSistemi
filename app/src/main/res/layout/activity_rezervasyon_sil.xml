<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRezervasyonSil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_RezSilMusteri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rezervasyonu Silinecek Müşteri"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_RezSilKimlikNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kimlikNo"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_RezSilKimlikNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/kimlikNo"
                android:inputType="textPersonName"
                android:textColorHint="@color/cardview_shadow_start_color" />

        </LinearLayout>

        <Button
            android:id="@+id/button_RezSilSeferden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seferden Sil" />

        <Button
            android:id="@+id/button_RezSilOtelden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Otelden Sil" />

        <Button
            android:id="@+id/buttonAnasayfa_rezSil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anasayfa" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>