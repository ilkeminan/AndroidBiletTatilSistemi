            android:layout_height="wrap_content"
            android:text="@string/kabulTarihiBaslang覺c"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_kabulBitis"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/kabulTarihiBitisi"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_KabulBitis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kabulTarihiBitisi"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_kapasite"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/kapasite"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_Kapasite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kapasite"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_bosYer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/bosYerSayisi"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_BosYer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bosYerSayisi"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonRezervasyonListele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rezervasyonListele" />
</LinearLayout>