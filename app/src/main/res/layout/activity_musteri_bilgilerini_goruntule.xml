<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMusteriBilgileriniGoruntule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_musteriIsmi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/isim"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textMusteriIsmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isim"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_musteriSoyismi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/soyisim"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textMusteriSoyismi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soyisim"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_musteriKimlikNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/kimlikNo"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textMusteriKimlikNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kimlikNo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_musteriTelefonNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/telefonNo"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textMusteriTelefonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telefonNo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_musteriPuani"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/puan"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textMusteriPuani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/puan"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>



</LinearLayout>